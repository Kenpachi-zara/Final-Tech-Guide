@model  Final_Tech_Guide.Models.LoginModel

@{
    ViewBag.Title = "Authentication";
}

 


<head>
    <link rel="stylesheet" type="text/css" href="../Content/Authentication.css" />
</head>


<!-- Attributes with in from or element ids  , names must match with model attributes and model's have to match with Database'-->
<h2 id="AuthTitle">   Welcome</h2>


 

<span> @ViewBag.SuccessMsg </span>

@using (Html.BeginForm("Authentication", "Home", FormMethod.Post, new { Class = "form needs-validation", novalidate = "false", id = "AuthForm" }))
// <form method ='post' action ='Home/Authentication' class ='form'
{


    // we wrap each group of form elements within div with class = "form-group"

    <!-- Username -->
    <div class="form-group">


        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, null, new { Class = "form-control", placeholder = "short name", required = "required" })
        @Html.ValidationMessageFor(m => m.Username)


        <!-- <input type="text" class="form-control" id="Userame" name="Username" value> -->
        <small id="passwordHelpBlock" class="form-text text-muted">
            Your Username should be between 5 - 20 characters.
        </small>

    </div>



    <!-- Password -->
    <div class="form-group">

        @Html.LabelFor(m => m.Password)
        @Html.TextBoxFor(m => m.Password, null, new { Class = "form-control", required = "required" })


        @Html.ValidationMessageFor(m => m.Password)

        <small id="passwordHelpBlock" class="form-text text-muted">
            Your password must be 8-20 characters long, contain letters and numbers,<br /> and must not contain spaces, special characters, or emoji.
        </small>

    </div>

   
    <div class="form-group">
        <!-- After submit details are sent to our Authentication Action method in HomeController-->
        <input id="btnSubmit" type="submit" class="btn btn-primary" value="Submit" onclick="Javascript: validate()" />

    </div>

    <div>
        <span id="Regsiter">@Html.ActionLink("Don't Have An Account? Register Now!", "Registration", "Home") </span> 

    </div>
}
